<assembly xmlns="https://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://maven.apache.org/ASSEMBLY/2.1.0 https://maven.apache.org/xsd/assembly-2.1.0.xsd">

    <id>makeself</id>

    <formats>
        <format>jar</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <!-- Include makeself files -->
        <fileSet>
            <directory>${project.basedir}/src/assembly/makeself</directory>
            <outputDirectory>META-INF/makeself</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <!-- Include previously compiled and jar code -->
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <outputDirectory />
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>

</assembly>
